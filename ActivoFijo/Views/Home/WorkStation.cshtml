<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="exampleModalLabel">WorkSatation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtIdWorkStation" type="text" value="0" style="display: none;" />


                <div class="row g-2">

                    <div class="col-sm-6">
                        <label for="cbocod_marca" class="form-label">Código de Marca</label>
                        <select class="form-control" id="cbocod_marca">
                            <option value="BK">BK</option>
                            <option value="CH">CH</option>
                            <option value="KF">KF</option>
                            <option value="MT">MT</option>
                            <option value="PB">PB</option>
                            <option value="PH">PH</option>
                            <option value="SB">SB</option>
                        </select>
                    </div>

                    <div class="col-sm-6">
                        <label for="txtcod_tienda" class="form-label">Código Tienda</label>
                        <input type="text" class="form-control" id="txtcod_tienda" placeholder="Ingrese el código de la tienda" maxlength="3">
                    </div>


                    <div class="col-sm-6">
                        <label for="txttienda" class="form-label">Tienda</label>
                        <input type="text" class="form-control" id="txttienda" placeholder="Ingrese la IP del Servisor" maxlength="20">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtcaja" class="form-label">Caja</label>
                        <input type="text" class="form-control" id="txtcaja" placeholder="Ingrese el nombre del Workstation" maxlength="50">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtip_workstation" class="form-label">IP</label>
                        <input type="text" class="form-control" id="txtip_workstation" placeholder="Ingrese el Modelo de Equipo" maxlength="90">
                    </div>

                    <div class="col-sm-6">
                        <label for="txthostname" class="form-label">HostName</label>
                        <input type="text" class="form-control" id="txthostname" placeholder="Ingrese la serie del Equipo" maxlength="90">
                    </div>

                    <div class="col-sm-6">
                        <label for="txttipo" class="form-label">Tipo</label>
                        <input type="text" class="form-control" id="txttipo" placeholder="Ingrese la vercion del Micros" maxlength="90">
                    </div>
                    <div class="col-sm-6">
                        <label for="cbomodelo" class="form-label">Modelo</label>
                        <select class="form-control" id="cbomodelo">
                            <option value="ACTUAL">ACTUAL</option>
                            <option value="ANTIGUA">ANTIGUA</option>
                        </select>
                    </div>
                    @{
                        string displayName = Session["displayName"] != null ? Session["displayName"].ToString() : "";
                    }


                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="txtusuarioregistro" placeholder="@displayName" maxlength="30" style="display:none;">
                    </div>

                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="txtusuarioactualizacion" placeholder="@displayName" maxlength="30" style="display:none;">
                    </div>

                    <div class="row mt-2">
                        <div class="col-12">
                            <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none;">
                                A simple danger alert—check it out!
                            </div>
                        </div>
                    </div>



                    <div class="col-sm-6">
                        <label for="cbostatus" class="form-label">Status</label>
                        <select class="form-control" id="cbostatus">
                            <option value="A">A</option>
                            <option value="I">I</option>
                        </select>
                    </div>

                    <div class="row mt-2">
                        <div class="col-12">
                            <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none">
                                A simple danger alert—check it out!
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script>
        var tabladata;
        var filaSeleccionada;
        var displayName = '@Session["displayName"]';

        $(document).ready(function () {
            tabladata = $("#tabla").DataTable({
                responsive: true,
                ordering: false,
                ajax: {
                    url: '@Url.Action("ListarWorkStation", "Home")',
                    type: "GET",
                    dataType: "json"
                },
                columns: [
                    { data: "tienda" },
                    {
                        data: "IdWorkStation",
                        render: function (data) {
                            return '<button type="button" class="btn btn-sm btn-informe" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id-tienda="' + data + '" onclick="abrirInfo(' + data + ')"><i class="fas fa-eye"></i></button>';
                        }
                    },
                    { data: "caja" },
                    { data: "ip_workstation" },
                    { data: "hostname" },
                    { data: "tipo" },
                    { data: "modelo" },
                    {
                        "data": "flg_estado",
                        "render": function (data) {
                            if (data === "A") {
                                return '<span class="badge bg-success">A</span>';
                            } else {
                                return '<span class="badge bg-danger">I</span>';
                            }
                        }
                    },
                    {
                        defaultContent: '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                            '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                        orderable: false,
                        searchable: false,
                        width: "90px"
                    }
                ],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json"
                }
            });

            $("#tabla tbody").on("click", '.btn-editar', function () {
                filaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(filaSeleccionada).data();
                abrirModal(data);
            });

            $("#tabla tbody").on("click", '.btn-eliminar', function () {
                var workstationSeleccionado = $(this).closest("tr");
                var data = tabladata.row(workstationSeleccionado).data();

                swal({
                    title: "¿Está seguro?",
                    text: "¿Desea eliminar el Punto de Venta?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Sí",
                    cancelButtonText: "No",
                    closeOnConfirm: true
                }, function () {
                    var Workstation = {
                        IdWorkStation: data.IdWorkStation
                    };

                    jQuery.ajax({
                        url: '@Url.Action("EliminarWorkstation", "Home")',
                        type: 'POST',
                        data: JSON.stringify({ id: Workstation.IdWorkStation }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(workstationSeleccionado).remove().draw();
                            } else {
                                swal("No se pudo eliminar", data.mensaje, "error");
                            }
                        },
                        error: function (error) {
                            console.error(error);
                        },
                        beforeSend: function () {
                            // Código de beforeSend si lo requieres
                        }
                    });
                });
            });
        });

        function abrirModal(json) {
            $("#txtIdWorkStation").val(0);
            $("#cbocod_marca").val("");
            $("#txtcod_tienda").val("");
            $("#txttienda").val("");
            $("#txtip_Workstation").val("");
            $("#txtnom_Workstation").val("");
            $("#txtmodelo").val("");
            $("#txtserie").val("");
            $("#txtsistema_operativo").val("");
            $("#txtversion_micros").val("");
            $("#txtmemoria_ram").val("");
            $("#txtusuarioregistro").val(displayName);
            $("#txtusuarioactualizacion").val(displayName);
            $("#cbostatus").val("");

            $("#mensajeError").hide();

            if (json !== null) {
                $("#txtIdWorkStation").val(json.IdWorkStation);
                $("#cbocod_marca").val(json.cod_marca);
                $("#txtcod_tienda").val(json.cod_tienda);
                $("#txttienda").val(json.tienda);
                $("#txtip_Workstation").val(json.ip_Workstation);
                $("#txtnom_Workstation").val(json.nom_Workstation);
                $("#txtmodelo").val(json.modelo);
                $("#txtserie").val(json.serie);
                $("#txtsistema_operativo").val(json.sistema_operativo);
                $("#txtversion_micros").val(json.version_micros);
                $("#txtmemoria_ram").val(json.memoria_ram);
                $("#txtusuarioregistro").val(json.usuarioregistro);
                $("#txtusuarioactualizacion").val(json.usuarioactualizacion);
                $("#cbostatus").val(json.flg_estado);
            }

            $("#formModal").modal("show");

            $("#tabla tbody").off("click", '.btn-editar').on("click", '.btn-editar', function () {
                var filaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(filaSeleccionada).data();
                abrirModal(data);
            });
        }

        function abrirInfo(IdWorkStation) {
            jQuery.ajax({
                url: '@Url.Action("DetalleWorkstation", "Home")',
                type: "POST", // Cambiar el tipo de solicitud a POST
                dataType: "json",
                data: { id: IdWorkStation },
                success: function(response) {
                    var Workstation = response;

                    $("#txtIdWorkStation1").val(Workstation.IdWorkStation);
                    $("#txttienda1").val(Workstation.tienda);
                    $("#txtip_Workstation1").val(Workstation.ip_Workstation);
                    $("#txtnom_Workstation1").val(Workstation.nom_Workstation);
                    $("#txtmodelo1").val(Workstation.modelo);
                    $("#txtserie1").val(Workstation.serie);
                    $("#txtsistema_operativo1").val(Workstation.sistema_operativo);
                    $("#txtversion_micros1").val(Workstation.version_micros);
                    $("#txtmemoria_ram1").val(Workstation.memoria_ram);
                    $("#txtfecha_registro1").val(Workstation.fecha_registro);
                    $("#txtfecha_actualizada1").val(Workstation.fecha_actualizada);
                    $("#txtultimo_reinicio1").val(Workstation.ultimo_reinicio);
                    $("#txtversion_facturador1").val(Workstation.version_facturador);
                    $("#txtultima_venta1").val(Workstation.ultima_venta);
                    $("#txtflg_estado1").val(Workstation.flg_estado);
                    $("#txtusuario_crea1").val(Workstation.usuario_crea);
                    $("#txtfecha_crea1").val(Workstation.fecha_crea);
                    $("#txtusuario_mod1").val(Workstation.usuario_mod);
                    $("#txtusuarioregistro1").val(Workstation.usuarioregistro);
                    $("#txtusuarioactualizacion1").val(Workstation.usuarioactualizacion);
                    $("#txtstatus1").val(Workstation.flg_estado);


                    $('#exampleModal').modal('show');
                },
                error: function(xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        }





        function Guardar() {
            var Workstation = {
                IdWorkStation: $("#txtIdWorkStation").val(),
                cod_marca: $("#cbocod_marca").val(),
                cod_tienda: $("#txtcod_tienda").val(),
                tienda: $("#txttienda").val(),
                ip_Workstation: $("#txtip_Workstation").val(),
                nom_Workstation: $("#txtnom_Workstation").val(),
                modelo: $("#txtmodelo").val(),
                serie: $("#txtserie").val(),
                sistema_operativo: $("#txtsistema_operativo").val(),
                version_micros: $("#txtversion_micros").val(),
                memoria_ram: $("#txtmemoria_ram").val(),
                usuarioregistro: displayName,
                usuarioactualizacion: displayName,
                flg_estado: $("#cbostatus").val()
            };

            jQuery.ajax({
                url: '@Url.Action("GuardarWorkstation", "Home")',
                type: 'POST',
                data: JSON.stringify({ objeto: Workstation }),
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (Workstation.IdWorkStation == 0) {
                        if (data.resultado !== 0) {
                            Workstation.IdWorkStation = data.resultado;
                            tabladata.row.add(Workstation).draw(false);
                            $("#formModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    } else {
                        if (data.data) {
                            tabladata.row(filaSeleccionada).data(Workstation).draw(false);
                            $("#formModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    console.error(error);
                    $("#mensajeError").text("Error al guardar los datos");
                    $("#mensajeError").show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                },
                complete: function () {
                    $(".modal-body").LoadingOverlay("hide");
                }
            });
        }
    </script>

    <script>
        $(document).ready(function () {
            // Tu código existente aquí...

            // Evento para actualizar la tabla después de cerrar el modal
            $('#formModal').on('hidden.bs.modal', function () {
                tabladata.ajax.reload();
            });
        });
    </script>
}