    <li class="breadcrumb-item active">WorkStation</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i>Lista de WorkStation
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <button type="button" class="btn btn-primary" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
            <div class="col-6 text-end">
                <form id="exportForm" action="@Url.Action("ExportarReporteWorkStation", "Home")" method="post">
