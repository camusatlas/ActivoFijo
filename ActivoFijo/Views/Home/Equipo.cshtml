            };

            var request = new FormData();
            request.append("objeto", JSON.stringify(Equipo))
            request.append("archivoImagen", ImagenSeleccionada)


                jQuery.ajax({
                    url: '@Url.Action("GuardarEquipo", "Home")',
                    type: 'POST',
                    data: request,
                    processData: false,
                    contentType: false,
                    success: function (data) {

                        // Nueva Producto
                        if (Equipo.IdEquipos == 0) {

                            if (data.idGenerado !== 0) {

                                Equipo.IdEquipo = data.resultado;
                                tabladata.row.add(Equipo).draw(false);
                                $("#formModal").modal("hide");

                            } else {
                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }
                        // Producto Editado
                        else {
                            if (data.data) {
                                tabladata.row(filaSeleccionada).data(Equipo).draw(false);
                                $("#formModal").modal("hide");
