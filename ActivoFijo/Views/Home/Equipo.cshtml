
@{
    ViewBag.Title = "Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Equipos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-boxes me-1"></i>Lista de Equipos
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Categoria</th>
                    <th>Precio</th>
                    <th>Sede</th>
                    <th>Modelo</th>
                    <th>Serie</th>
                    <th>Cod. Inventario</th>
                    <th>Usuario</th>
                    <th>Guira Ingreso</th>
                    <th>Proveedor</th>
                    <th>Orden Compra</th>
                    <th>Orden Interna</th>
                    <th>Activo Fijo</th>
                    <th>Almacen</th>
                    <th>Codigo SAP</th>
                    <th>Prioridad</th>
                    <th>Sistema</th>
                    <th>Direccion Mac</th>
                    <th>Especicacion Hardware</th>
                    <th>Fecha Garantia</th>
                    <th>Observación</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="text" value="0" style="display: none;" />

                <form id="contenedor" class="row">

                    <div class="col-sm-3">
                        <div class="mb-2">
                            <img id="img_equipo" height="197" width="200" class="border rounded mx-auto db-block img-fluid" />
                        </div>
                        <div class="mb-2">
                            <input class="form-control" type="file" id="fileEquipo" accept="image/png, image/jpg, image/jpeg" onchange="mostrarImagen(this)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Marca</label>
                            <select id="cbomarca" class="form-select">
                            </select>
                        </div>
                        
                    </div>
                    <!-- Nombre -->
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Categoria</label>
                            <select id="cbocategoria" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="txtnombre" name="nombre" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtprecio" name="precio" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sede</label>
                            <select id="cbosede" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Modelo</label>
                            <select id="cbomodelo" class="form-select">
                            </select>
                        </div>
                    </div>
                    <!-- Marca -->
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Proveedor</label>
                            <select id="cboproveedor" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Almacen</label>
                            <select id="cboalmacen" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Prioridad</label>
                            <select id="cboprioridad" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sistema</label>
                            <select id="cbosistema" class="form-select">
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Activo</label>
                            <select id="cboactivo" class="form-select">
                                <option value="1">Si</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                    </div>

                </form>

                <!-- Mesnaje de alerta -->
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>

