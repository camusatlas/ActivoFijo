            };

            var request = new FormData();
            request.append("objeto", JSON.stringify(Equipo))
            request.append("archivoImagen", ImagenSeleccionada)


    jQuery.ajax({
        url: '@Url.Action("GuardarEquipo", "Home")',
        type: 'POST',
        data: request,
        processData: false,
        contentType: false,
        success: function (data) {

            // Nueva Producto
            if (Equipo.IdProducto == 0) {

                if (data.idGenerado !== 0) {

                    Equipo.IdEquipo = data.resultado;
                    tabladata.row.add(Equipo).draw(false);
                    $("#formModal").modal("hide");

                } else {
                    $("#mensajeError").text(data.mensaje);
                    $("#mensajeError").show();
                }
            }
            // Producto Editado
            else {
                if (data.data) {
                    tabladata.row(filaSeleccionada).data(Equipo).draw(false);
                    $("#formModal").modal("hide");
                } else {
                    $("#mensajeError").text(data.mensaje);
                    $("#mensajeError").show();
                }
            }
            location.reload(); // Recarga la página después de completar la operación de guardado
        },
        error: function (error) {
            $(".modal-body").LoadingOverlay("hide");
            $("#mensajeError").text("Error Ajax");
            $("#mensajeError").show();
        },
        beforeSend: function () {
            $(".modal-body").LoadingOverlay("show", {
                imageResizeFactor: 2,
                text: "Cargando...",
                size: 14
            });
        }
    });
}



