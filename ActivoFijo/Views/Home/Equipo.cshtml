                $("#txtfechagrantia").val(json.FechaGarantia);
                $("#txtobservacion").val(json.Onservacion);
                $("#cboactivo").val(json.Activo == true ? 1 : 0);

                jQuery.ajax({
                    url: '@Url.Action("ImagenEquipo", "Home")',
                    type: "POST",
                    data: JSON.stringify({ id: json.IdEquipo }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        $("#img_equipo").LoadingOverlay("hide");

                        if (data.conversion) {
                            $("#img_equipo").attr({ "src": "data:image/" + data.extension + ";base64," + data.textobase64 });
                        }
                    },
                    error: function (error) {
                        $("#img_equipo").LoadingOverlay("hide");

                        $("#mensajeError").show();
                        $("#mensajeError").text("Error al mostrar imagen");
                    },
                    beforeSend: function () {
                        $("#img_equipo").LoadingOverlay("show");

                    }
                })


            }

            $("#formModal").modal("show");

            $("#tabla tbody").off("click", '.btn-editar').on("click", '.btn-editar', function () {
                var filaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(filaSeleccionada).data();
                abrirModal(data);
            });

        }

