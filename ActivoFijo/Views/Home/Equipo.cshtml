                    }
            });

            $.validator.addMethod("preciodecimal", function (value, element) {
                return this.optional(element) || /^\d{0,4}(\.\d{0,2})?$/i.test(value);
            }, "El formato correcto del precio es ###.##");

            $("#contenedor").validate({
                rules: {
                    Nombre: {
                        required: true
                    },
                    Descripcion: {
                        required: true
                    },
                    precio: {
                        required: true,
                        preciodecimal: true
                    },
                    Serie: {
                        required: true,
                    },
                    CodInventario: {
                        required: true,
                    },
                    Usuario: {
                        required: true,
                    },
                    GuiaIngreso: {
                        required: true,
                    },
                    OrdenCompra: {
                        required: true,
                    },
                    OrdenInterna: {
                        required: true,
                    },
                    ActivoFijo: {
                        required: true,
                    },
                    CodMaterialSAP: {
                        required: true,
                    },
                    DireccionMac: {
                        required: true,
                    },
                    FechaGarantia: {
                        required: true,
                    },
                    FechaActualizacion: {
                        required: true,
                    },
                    Onservacion: {
                        required: true,
                    },
                    Stock: {
                        required: true,
                    }
                },
                messages: {
                    Nombre: "- El campo Nombre es obligatorio",
                    /*precio: { required: "- El campo precio es obligatorio", preciodecimal: "El formato correcto del precio es: ###.##" },*/
                    Serie: "- El campo Serie es obligatorio",
                    CodInventario: "- El cod. inventario es obligatorio",
                    Usuario: "- El campo usuario es obligatorio",
                    GuiaIngreso: "- La guia de ingreso es obligatorio",
                    OrdenCompra: "- La orden de compra es obligatorio",
                    OrdenInterna: "- La orden interna es obligatorio",
                    ActivoFijo: "- El activo fijo es obligatorio",
                    CodMaterialSAP: "- El codigo SAP es obligatorio",
                    DireccionMac: "- La dirección mac es obligatorio",
                    EspecificacionesHardware: "- La especificación es obligatorio",
                    FechaGarantia: "- La fecha de garantia es obligatorio",
                    Onservacion: "- La observación es obligatorio"
                },
                errorElement: "div",
                errorLabelContainer: ".alert-danger"
            })






            $("#tabla tbody").on("click", '.btn-editar', function () {
                var rowIndex = tabladata.row($(this).closest('tr')).index();
                var rowData = tabladata.row(rowIndex).data();
                abrirModal(rowData);
            });

    $("#tabla tbody").on("click", '.btn-eliminar', function () {
        var equipotoSeleccionado = $(this).closest("tr");
        var data = tabladata.row(equipotoSeleccionado).data();

        swal({
            title: "¿Está seguro?",
            text: "¿Desea eliminar la Equipo?",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-primary",
            confirmButtonText: "Sí",
            cancelButtonText: "No",
            closeOnConfirm: true
        },

            function () {
                debugger;
                var Equipo = {
                    IdEquipos: data.IdEquipos // Obtener el IdEquipo del registro
            };
            jQuery.ajax({
                url: '@Url.Action("EliminarEquipo", "Home")',
                type: 'POST',
                data: JSON.stringify({ id: Equipo.IdEquipos }), // Enviar solo el IdUsuario
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.row(equipotoSeleccionado).remove().draw();
                    } else {
                        swal("No se pudo eliminar", data.mensaje, "error");
                    }
                },
                error: function (error) {
                    console.log(error);
                },
                beforeSend: function () {
                    // Código de beforeSend si lo requieres
                }
            });
        });

        console.log(data);
    });
});

        function abrirModal(json) {
            $("#txtid").val(0);
            $("#img_equipo").removeAttr("src");
            $("#fileEquipo").val("");
            $("#txtdescripcion").val("");
            $("#cbomarca").val($("#cbomarca option:first").val());
            $("#cbocategoria").val($("#cbocategoria option:first").val());
            $("#txtprecio").val("");
            $("#cbosede").val($("#cbosede option:first").val());
            $("#cbomodelo").val($("#cbomodelo option:first").val());
            $("#txtserie").val("");
            $("#txtcodinventario").val("");
            $("#txtusuario").val("");
            $("#txtguiaingreso").val("");
            $("#cboproveedor").val($("#cboproveedor option:first").val());
            $("#txtordencompra").val("");
            $("#txtordeninterna").val("");
            $("#txtactivofijo").val("");
            $("#cboalmacen").val($("#cboalmacen option:first").val());
            $("#cborazonsocial").val($("#cborazonsocial option:first").val());
            $("#txtcodmaterialsap").val("");
            $("#cboprioridad").val($("#cboprioridad option:first").val());
            $("#cbosistema").val($("#cbosistema option:first").val());
            $("#txtdireccionmac").val("");
            $("#txtstock").val("");
            $("#txtfechaactualizacion").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());
            $("#txtfechagrantia").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());
            $("#txtobservacion").val("");
            $("#txtnombreequipo").val("");
            $("#cboactivo").val(1);

            // Ocultar valores
            $("#mensajeError").hide();

            if (json !== null) {
                $("#txtid").val(json.IdEquipos);
                $("#txtnombreequipo").val(json.Nombre);
                $("#txtdescripcion").val(json.Descripcion);
                $("#cbomarca").val(json.oMarca.IdMarca);
                $("#cbocategoria").val(json.oCategoria.IdCategoria);
                $("#txtprecio").val(json.Precio);
                $("#cbosede").val(json.oSede.IdSede);
                $("#cbomodelo").val(json.oModelo.IdModelo);
                $("#txtserie").val(json.Serie);
                $("#txtcodinventario").val(json.CodInventario);
                $("#txtusuario").val(json.Usuario);
                $("#txtguiaingreso").val(json.GuiaIngreso);
                $("#cboproveedor").val(json.oProveedor.IdProveedor);
                $("#txtordencompra").val(json.OrdenCompra);
                $("#txtordeninterna").val(json.OrdenInterna);
                $("#txtactivofijo").val(json.ActivoFijo);
                $("#cborazonsocial").val(json.oRazonSocial.IdRazonSocial);
                $("#cboalmacen").val(json.oAlmacen.IdAlmacen);
                $("#txtcodmaterialsap").val(json.CodMaterialSAP);
                $("#cboprioridad").val(json.oPrioridad.IdPrioridades);
                $("#cbosistema").val(json.oSistema.IdSistema);
                $("#txtdireccionmac").val(json.DireccionMac);
                $("#txtstock").val(json.Stock);
                $("#txtespecificacioneshardware").val(json.EspecificacionesHardware);
                $("#txtfechagrantia").val(json.FechaGarantia);
                $("#txtfechaactualizacion").val(json.FechaActualizacion);
                $("#txtobservacion").val(json.Onservacion);
                $("#cboactivo").val(json.Activo == true ? 1 : 0);


                jQuery.ajax({
                    url: '@Url.Action("ImagenEquipo", "Home")',
                    type: "POST",
                    data: JSON.stringify({ id: json.IdEquipos }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                
                        $("#img_equipo").LoadingOverlay("hide");
                
                        if (data.conversion) {
                            $("#img_equipo").attr({ "src": "data:image/" + data.extension + ";base64," + data.textobase64 });
                        }
                    },
                    error: function (error) {
                        $("#img_equipo").LoadingOverlay("hide");
                
                        $("#mensajeError").show();
                        $("#mensajeError").text("Error al mostrar imagen");
