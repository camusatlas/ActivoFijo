                    $.each(data.data, function (index, item) {
                        $("<option>").attr({ "value": item.IdRazonSocial }).text(item.NomRazonSocial).appendTo("#cborazonsocial");
                    })

                },
                    error: function (error) {
                    console.log(error)
                    }
            });

            //Listar Almacen
            jQuery.ajax({
                url: '@Url.Action("ListarAlmacen", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=uft-8",
                success: function (data) {
                    console.log(data)

                    $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cboalmacen")

                    $.each(data.data, function (index, item) {
                        $("<option>").attr({ "value": item.IdAlmacen }).text(item.NomAlmacen).appendTo("#cboalmacen");
                    })

                },
                    error: function (error) {
                    console.log(error)
                    }
            });

            //Listar Prioridad
            jQuery.ajax({
                url: '@Url.Action("ListarPrioridad", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=uft-8",
                success: function (data) {
                    console.log(data)

                    $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cboprioridad")

                    $.each(data.data, function (index, item) {
                        $("<option>").attr({ "value": item.IdPrioridades }).text(item.NomPrioridad).appendTo("#cboprioridad");
                    })

                },
                    error: function (error) {
