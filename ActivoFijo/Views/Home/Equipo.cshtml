                    url: '@Url.Action("ListarEquipo", "Home")',
                    type: "GET",
                    dataType: "json",
                },
                "columns": [
                    { "data": "Nombre"},
                    {
                        "data": "oCategoria", "render": function (data) {
                            return data.Descripcion
