                    }
            });

            //Listar SistemaOperativo
            jQuery.ajax({
                url: '@Url.Action("ListarSistemaOperativo", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=uft-8",
                success: function (data) {
                    console.log(data)

                    $("<option>").attr({ "value": "0", "disabled": "true" }).text("Seleccionar").appendTo("#cbosistema")

