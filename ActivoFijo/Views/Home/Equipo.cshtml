
@{
    ViewBag.Title = "Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Equipos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-boxes me-1"></i>Lista de Equipos
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Stok</th>
                    <th>Modelo</th>
                    <th>Serie</th>
                    <th>Responsable</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Equipos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="text" value="0" style="display: none;" />

                <form id="contenedor" class="row">

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Nombre Equipo</label>
                            <input type="text" class="form-control" id="txtnombreequipo" name="nombreequipo" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Categoria</label>
                            <select id="cbocategoria" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Marca</label>
                            <select id="cbomarca" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Modelo</label>
                            <select id="cbomodelo" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Serie</label>
                            <input type="text" class="form-control" id="txtserie" name="serie" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <textarea type="text" class="form-control" id="txtdescripcion" name="descripcion" style="height: 200px; resize: none"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Código de Inventario</label>
                            <input type="text" class="form-control" id="txtcodinventario" name="codinventario" />
                        </div>
                    </div>

                    <!-- Nombre -->
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Responsable</label>
                            <input type="text" class="form-control" id="txtusuario" name="usuario" value="@HttpUtility.HtmlEncode(Session["displayName"])" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Guía de Ingreso</label>
                            <input type="text" class="form-control" id="txtguiaingreso" name="guiaingreso" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sede</label>
                            <select id="cbosede" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Proveedor</label>
                            <select id="cboproveedor" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Orden de Compra</label>
                            <input type="text" class="form-control" id="txtordencompra" name="ordencompra" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Orden Interna</label>
                            <input type="text" class="form-control" id="txtordeninterna" name="ordeninterna" />
                        </div>
                        <!--AFEC-->
                        <div class="mb-3">
                            <label class="form-label">Almacen de Ingreso</label>
                            <select id="cboalmacen" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtprecio" name="precio" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Código Sap</label>
                            <input type="text" class="form-control" id="txtcodmaterialsap" name="codmaterialsap" />
                        </div>
                        <!--falta agregar el listado de esta tabla-->
                    </div>
                    
                    <!-- Marca -->
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Razón Social</label>
                            <select id="cborazonsocial" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Prioridad</label>
                            <select id="cboprioridad" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sistema</label>
                            <select id="cbosistema" class="form-select">
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Dirección Mac</label>
                            <input type="text" class="form-control" id="txtdireccionmac" name="direccionmac" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Fecha de Garantia</label>
                            <input type="text" class="form-control" id="txtfechagrantia" name="fechagrantia" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Fecha de Actualizacion</label>
                            <input type="text" class="form-control" id="txtfechaactualizacion" name="fechaactualizacion" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Observaciones</label>
                            <textarea type="text" class="form-control" id="txtobservacion" name="observacion" style="height: 200px; resize: none"></textarea>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Activo Fijo</label>
                            <input type="text" class="form-control" id="txtactivofijo" name="activofijo" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Stock</label>
                            <input type="number" class="form-control" id="txtstock" name="stock" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Estado</label>
                            <select id="cboactivo" class="form-select">
                                <option value="1">Activo</option>
                                <option value="0">Desactivado</option>
                            </select>
                            <br />
                            <br />
                            <div class="mb-2">
                                <img id="img_equipo" height="197" width="200" class="border rounded mx-auto db-block img-fluid" />
                            </div>
                            <div class="mb-2">
                                <input class="form-control" type="file" id="fileEquipo" accept="image/png, image/jpg, image/jpeg" onchange="mostrarImagen(this)" />
                            </div>
                        </div>
                    </div>

                </form>

                <!-- Mesnaje de alerta -->
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;

        function mostrarImagen(input) {
            if (input.files) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $("#img_equipo").attr("src", e.target.result).width(200).height(197)
                }
                reader.readAsDataURL(input.files[0]);
            }
        }



        $(document).ready(function () {
