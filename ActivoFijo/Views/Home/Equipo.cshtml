                    $.each(data.data, function (index, item) {
                        $("<option>").attr({ "value": item.IdProveedor }).text(item.NomProveedor).appendTo("#cboproveedor");
                    })

                },
                    error: function (error) {
                    console.log(error)
                    }
            });

            //Listar Razon social
            jQuery.ajax({
                url: '@Url.Action("ListarRazonSocial", "Home")',
                type: "GET",
                data: null,
                dataType: "json",
