    $("#tabla tbody").on("click", '.btn-editar', function () {
        var filaSeleccionada = $(this).closest("tr");
        var data = tabladata.row(filaSeleccionada).data();
        abrirModal(data);
    });

    $("#tabla tbody").on("click", '.btn-eliminar', function () {
        var equipoSeleccionado = $(this).closest("tr");
        var data = tabladata.row(equipoSeleccionado).data();

        swal({
            title: "¿Está seguro?",
            text: "¿Desea eliminar la Equipo?",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-primary",
            confirmButtonText: "Sí",
            cancelButtonText: "No",
            closeOnConfirm: true
        },

            function () {
                debugger;
                var Equipo = {
                    IdEquipo: data.IdEquipo // Obtener el IdEquipo del registro
            };
            jQuery.ajax({
                url: '@Url.Action("EliminarEquipo", "Home")',
                type: 'POST',
                data: JSON.stringify({ id: Equipo.IdEquipo }), // Enviar solo el IdUsuario
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.row(equipoSeleccionado).remove().draw();
                    } else {
                        swal("No se pudo eliminar", data.mensaje, "error");
                    }
                },
                error: function (error) {
                    console.log(error);
                },
                beforeSend: function () {
                    // Código de beforeSend si lo requieres
